<%- include('../partials/header') %>

    <header
        style="padding: 10rem 0 4rem; background: var(--clr-surface-alt); border-bottom: 1px solid var(--clr-border);">
        <div class="container" style="text-align:center;">
            <span
                style="display:inline-block; font-size: 0.85rem; text-transform:uppercase; letter-spacing: 2px; color: var(--clr-accent); font-weight: 600; margin-bottom: 1.5rem;">Intake</span>
            <h1 class="editorial-title" style="margin-bottom: 2rem;">Book a Consultation.</h1>
            <p style="font-size: 1.15rem; color: var(--clr-text-muted); max-width: 600px; margin: 0 auto;">Select your
                preferred format (in-person or highly-secure Zoom) and an appropriate partner will be assigned.</p>
        </div>
    </header>

    <section style="padding: 6rem 0; background: var(--clr-bg);">
        <div class="container" style="max-width: 800px;">

            <div style="background: var(--clr-surface); padding: 4rem; border: 1px solid var(--clr-border);">

                <!-- Tab Headers Mockup -->
                <div style="display:flex; border-bottom: 1px solid var(--clr-border); margin-bottom: 3rem;">
                    <button
                        style="flex:1; padding: 1rem; background:transparent; border:none; border-bottom: 2px solid var(--clr-primary); font-family:var(--font-sans); font-weight:600; font-size:0.9rem; text-transform:uppercase; letter-spacing:1px; cursor:pointer; color:var(--clr-primary);">1.
                        Select Service</button>
                    <button
                        style="flex:1; padding: 1rem; background:transparent; border:none; border-bottom: 2px solid transparent; font-family:var(--font-sans); font-weight:600; font-size:0.9rem; text-transform:uppercase; letter-spacing:1px; color:var(--clr-text-muted);">2.
                        Date & Time</button>
                    <button
                        style="flex:1; padding: 1rem; background:transparent; border:none; border-bottom: 2px solid transparent; font-family:var(--font-sans); font-weight:600; font-size:0.9rem; text-transform:uppercase; letter-spacing:1px; color:var(--clr-text-muted);">3.
                        Finalize</button>
                </div>

                <form
                    onsubmit="event.preventDefault(); alert('Consultation Request Submitted. A confirmation email with your encrypted Zoom link or office instructions will follow pending payment/retainer clearing.'); this.reset();">

                    <div class="form-group" style="margin-bottom: 2rem;">
                        <label>Consultation Format</label>
                        <div style="display:grid; grid-template-columns: 1fr 1fr; gap: 1rem; margin-top:0.5rem;">
                            <label
                                style="border: 1px solid var(--clr-primary); padding: 1.5rem; text-align:center; cursor:pointer; background:var(--clr-surface-alt); border-radius:var(--radius-sm); font-weight:500; text-transform:none;">
                                <input type="radio" name="format" value="video" checked
                                    style="margin-bottom: 0.5rem; display:block; margin: 0 auto 0.5rem;">
                                <i class="fas fa-video"
                                    style="font-size: 1.5rem; color:var(--clr-primary); margin-bottom:0.5rem; display:block;"></i>
                                Secure Video (Zoom)
                            </label>
                            <label
                                style="border: 1px solid var(--clr-border); padding: 1.5rem; text-align:center; cursor:pointer; color:var(--clr-text-muted); font-weight:500; text-transform:none;">
                                <input type="radio" name="format" value="office"
                                    style="margin-bottom: 0.5rem; display:block; margin: 0 auto 0.5rem;">
                                <i class="fas fa-building"
                                    style="font-size: 1.5rem; margin-bottom:0.5rem; display:block;"></i>
                                In-Office (NY HQ)
                            </label>
                        </div>
                    </div>

                    <div class="form-group" style="margin-bottom: 2rem;">
                        <label>Preferred Date</label>
                        <input type="date" class="form-control" required style="cursor:pointer;">
                    </div>

                    <div class="form-group" style="margin-bottom: 3rem;">
                        <label>Select Time Slot</label>
                        <select class="form-control" style="appearance:none;" required>
                            <option value="">Choose Available Time...</option>
                            <option value="09:00">09:00 AM EST</option>
                            <option value="11:00">11:00 AM EST</option>
                            <option value="14:00">02:00 PM EST</option>
                            <option value="16:00">04:00 PM EST</option>
                        </select>
                    </div>

                    <hr style="border:0; border-top:1px solid var(--clr-border); margin-bottom: 2rem;">

                    <div class="form-group">
                        <label>Client Full Name</label>
                        <input type="text" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label>Entity/Company (If Applicable)</label>
                        <input type="text" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>Billing Email</label>
                        <input type="email" class="form-control" required>
                    </div>

                    <button type="submit" class="btn btn-primary"
                        style="width:100%; padding: 1.25rem; font-size:1rem; margin-top:1rem;">Proceed to Retainer
                        Payment ($500.00)</button>
                    <div style="text-align:center; font-size: 0.8rem; color:var(--clr-text-muted); margin-top: 1rem;">
                        <i class="fas fa-lock"></i> Payments processed securely via Stripe. Requires verification.
                    </div>
                </form>
            </div>

        </div>
    </section>

    <%- include('../partials/footer') %>